<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ficheros.MainActivity">


    <Button
        android:id="@+id/Eje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="escribir en interna"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Eje2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribir en Externa"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/Eje1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Eje3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="leer ficheros"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/Eje2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Eje4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codificacion"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/Eje3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Eje5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:text="Explorador"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Eje4" />
</android.support.constraint.ConstraintLayout>
